{
  "manifest_version": 2,

  "name": "ReadHomestuck extension",
  "description": "Designed to be used with DomNomNom.com/ReadHomestuck for additional features (that requre iframe communication)",
  "version": "1.1.1",

  "browser_action": {
    "default_icon": "favicon.png"
  },
  "background": {
    "scripts": ["background.js"]  // sets up the extension button click
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.mspaintadventures.com/*"],
      "css": ["overide.css"],
      "js": ["jquery.js", "contentscript.js"],
      "all_frames": true
    }
  ]
}
